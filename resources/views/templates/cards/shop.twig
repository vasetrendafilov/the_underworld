<div class="card-columns" id="last" style="display:none">
  {% for item in row3 %}
    <div class="card" >
    {% if auth.user.prom.rank < item.rank %} {% include 'templates/partials/zabrana.twig' %} {% endif %}
    <img class="card-img-top" src="{{baseUrl}}/resources/img/weapons/{{item.id}}.png" height="250">
    <h3 class="title">{{item.title}}</h3>
    <div class="card-body">
      <div class="row">
      <input type="hidden" value="{{item.price}}">
      <div class="col" data-toggle="tooltip" data-placement="top" title="Цена">
          {%include 'templates/svg/money-bag.svg'%}
          <span class="outPari" data-toggle="tooltip" data-placement="top" title="Цена"><output>{{item.price}}</output>$</span>
        </div>
      <div class="col">
          {{item.description}}
        </div>
        <div class="w-100"></div>
        <div class="col">
          {% if item.id == 30 %}
            <input type="range" min="{{auth.user.prom.points}}" max="{{item.reward}}" value="{{auth.user.prom.points}}" class="slider">
            <input type="number" class="result" value="{{auth.user.prom.points}}">
          {% else %}
            {% if item.id == 31 %}
              <input type="range" min="0" max="{{item.reward}}" value="0" class="slider">
              <input type="number" class="result" value="0">
            {% else %}
              <input type="range" min="{{auth.user.energy.energija}}" max="{{item.reward}}" value="{{auth.user.energy.energija}}" class="slider">
              <input type="number" class="result" value="{{auth.user.energy.energija}}">
            {% endif %}
          {% endif %}
        </div>
      </div>
      <button class="btn btn-danger shop">КУПИ</button>
      <input type="hidden" value="{{item.id}}">
    </div>
    </div>
  {% endfor %}
</div>
