<style media="screen">
.container-fluid{
  padding-top: 120px;
}
.container-fluid .card-columns .card-body .row{
  margin-left: -15px!important;
}
</style>
<div class="card-navigation">
  <ul class="nav nav-fill">
    <li class="nav-item" id="1">
      <a class="nav-link">ОРУЖЈЕ</a>
    </li>
    <li class="nav-item" id="2">
      <a class="nav-link">УНЛОКС</a>
    </li>
    <li class="nav-item" id="3">
      <a class="nav-link">ОСТАНАТО</a>
    </li>
  </ul>
</div>
<div class='container p-0'></div>
<div class="card-columns" id="first">
  {% for item in row1 %}
    <div class="card">
    {% if auth.user.prom.rank < item.rank %} {% include 'templates/partials/zabrana.twig' %} {% endif %}
    <img class="card-img-top" src="{{baseUrl}}/resources/img/{{item.type}}/{{item.id}}.png">
    <h3 class="title">{{item.title}}</h3>
    <div class="card-body">
      <div class="row">
          <input type="hidden" value="{{item.price}}">
      <div class="col" data-toggle="tooltip" data-placement="top" title="Цена">
          {%include 'templates/svg/money-bag.svg'%}
          <span class="outPari" data-toggle="tooltip" data-placement="top" title="Цена"><output>{{item.price}}</output>$</span>
        </div>
      <div class="col" data-toggle="tooltip" data-placement="top" title="Моќ">
          {%include 'templates/svg/mok.svg'%}
          <span>{{item.reward('mok')}}</span>
        </div>
        <div class="w-100"></div>
        <div class="col">
          <input type="range" min="{{auth.user.inventory.zaliha(item.type,item.id)}}" max="{{auth.user.inventory.zaliha(item.type,item.id) + 400}}" value="{{auth.user.inventory.zaliha(item.type,item.id)}}" class="slider">
          <input type="number" class="result" value="{{auth.user.inventory.zaliha(item.type,item.id)}}">
        </div>
      </div>
      <button class="btn btn-danger shop">КУПИ</button>
      <input type="hidden" value="{{item.id}}">
    </div>
    </div>
  {% endfor %}
</div>
