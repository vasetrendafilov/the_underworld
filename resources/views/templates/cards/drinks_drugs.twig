</div>
<div class="card-columns" id="last" style="display:none;column-count:1;">
  <div class="card">
  <table class="table" id="stocks">
  	<thead class="thead-dark">
  		<tr>
  			<th>ИМЕ</th>
  			<th>CP</th>
  			<th>SV</th>
  			<th data-breakpoints="xs sm">YK</th>
  			<th data-breakpoints="xs sm md">AH</th>
        <th data-breakpoints="xs sm md">VL</th>
        <th data-breakpoints="xs sm md">BL</th>
        <th data-breakpoints="xs sm md">CT</th>
  		</tr>
  	</thead>
  	<tbody>
      {% for key,item in row3 %}
    		<tr>
    			<td>{{name[key]}}</td>
    			<td style="color:{{ item.price > item.CP ?'var(--red)':'var(--green)' }}">{{item.CP}}$</td>
    			<td style="color:{{ item.price > item.SV ?'var(--red)':'var(--green)' }}">{{item.SV}}$</td>
    			<td style="color:{{ item.price > item.YK ?'var(--red)':'var(--green)' }}">{{item.YK}}$</td>
    			<td style="color:{{ item.price > item.AH ?'var(--red)':'var(--green)' }}">{{item.AH}}$</td>
    			<td style="color:{{ item.price > item.VL ?'var(--red)':'var(--green)' }}">{{item.VL}}$</td>
          <td style="color:{{ item.price > item.BL ?'var(--red)':'var(--green)' }}">{{item.BL}}$</td>
          <td style="color:{{ item.price > item.CT ?'var(--red)':'var(--green)' }}">{{item.CT}}$</td>
    		</tr>
      {% endfor %}
  	</tbody>
  </table>
  </div>
</div>
<script type="text/javascript">
$(function(){
  $('#stocks').footable();
});
</script>
