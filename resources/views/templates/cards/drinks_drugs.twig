<style media="screen">
.container-fluid{
  padding-top: 120px;
}
.container-fluid .card-columns .card-body .row{
  margin-left: -15px!important;
}
</style>
<div class="card-navigation">
  <ul class="nav nav-fill">
    <li class="nav-item" id="1">
      <a class="nav-link">КУПИ</a>
    </li>
    <li class="nav-item" id="2">
      <a class="nav-link">ПРОДАДИ</a>
    </li>
    <li class="nav-item" id="3">
      <a class="nav-link">СОСТОЈБА</a>
    </li>
  </ul>
</div>
<div class='container p-0'></div>
<div class="card-columns" id="first">
  {% for item in row1 %}
    <div class="card" >
    {% if auth.user.prom.rank < item.rank %} {% include 'templates/partials/zabrana.twig' %} {% endif %}
    <img class="card-img-top" src="{{baseUrl}}/resources/img/{{item.type}}/{{item.id}}.png">
    <h3 class="title">{{item.title}}</h3>
    <div class="card-body">
      <div class="row">
        <input type="hidden" value="{{item.price.state(auth.user.prom.place)}}">
        <div class="col col-7">
          {%include 'templates/svg/money-bag.svg'%}
          <span class="outPari" data-toggle="tooltip" data-placement="top" title="Цена"><output>{{item.price.state(auth.user.prom.place)}}</output>$</span>
        </div>
        <div class="col">
          {%include 'templates/svg/zaliha.svg'%}
          <span class="zal" data-toggle="tooltip" data-placement="top" title="Залиха">{{item.zaliha}}</span>
        </div>
        <div class="w-100"></div>
        <div class="col">
          <input type="range" min="{{auth.user.inventory.zaliha(item.type,item.id)}}" max="{{item.zaliha}}" value="{{auth.user.inventory.zaliha(item.type,item.id)}}" class="slider">
          <input type="number" class="result" value="{{auth.user.inventory.zaliha(item.type,item.id)}}">
        </div>
      </div>
      <button class="btn btn-danger drink_drug">КУПИ</button>
      <input type="hidden" value="{{item.id}}">
      <input type="hidden" value="add">
    </div>
    </div>
  {% endfor %}
</div>
<div class="card-columns" id="second"style="display:none">
  {% for item in row2 %}
  <div class="card">
  <img class="card-img-top" src="{{baseUrl}}/resources/img/{{item.type}}/{{item.id}}.png">
  <h3 class="title">{{item.title}}</h3>
  <div class="card-body">
    <div class="row">
      <input type="hidden" value="{{item.price.state(auth.user.prom.place)}}">
      <div class="col col-7">
        {%include 'templates/svg/money-bag.svg'%}
        <span class="outPari" data-toggle="tooltip" data-placement="top" title="Цена"><output>{{item.price.state(auth.user.prom.place)}}</output>$</span>
      </div>
      <div class="col">
        {%include 'templates/svg/zaliha.svg'%}
        <span data-toggle="tooltip" data-placement="top" title="Залиха">{{auth.user.inventory.zaliha(item.type,item.id)}}</span>
      </div>
      <div class="w-100"></div>
      <div class="col">
        <input type="range" min="0" max="{{auth.user.inventory.zaliha(item.type,item.id)}}" value="0" class="slider reverse">
        <input type="number" class="result" value="0">
      </div>
    </div>
    <button class="btn btn-danger drink_drug">ПРОДАЈ</button>
    <input type="hidden" value="{{item.id}}">
    <input type="hidden" value="sell">
  </div>
  </div>
