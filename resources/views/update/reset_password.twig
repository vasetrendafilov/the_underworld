{%extends 'templates/app.twig'%}
{% block head %}
<link rel="stylesheet" href= "{{baseUrl}}/resources/css/update/recover_pass.css">
{% endblock %}
{% block content %}
<div class="row" id="margin">
       <div class="col-md-4 col-md-offset-4">
           <div class="panel panel-default">
             <div class="panel-body">
               <h2>Промени лозинка</h2>
           </div>
           <div class="panel-body">
        <form action="{{path_for('password.reset')}}?email={{email}}&recover_hash={{recover_hash | url_encode}}" method="post" autocomplete="off">
          <div class="form-group ">
            <label for="password">Нова лозинка</label>
            <input type="password" class="form-control" id="password" placeholder="password" name="password" >
             {% if errors.first('password') %}
            <span class="help-block">{{errors.first('password')}}</span>
            {% endif %}
          </div>
          <div class="form-group ">
            <label for="password_confirm">Потврди лозинка</label>
            <input type="password" class="form-control" id="password_confirm" placeholder="password" name="password_confirm" >
             {% if errors.first('password_confirm') %}
            <span class="help-block">{{errors.first('password_confirm')}}</span>
            {% endif %}
          </div>
      {{ csrf_field() | raw }}
    <button type="submit" class="btn btn-danger">Поднеси</button>
</form>
</div>
      </div>
      </div>
  </div>
{% endblock %}
